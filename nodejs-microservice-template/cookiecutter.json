{
  "_copy_without_render": [".db", "*.db", "*.sqlite", ".env"],
  "_output_dir": ".",
  "_template": ".",

  "project_name": "My New Node.js Service",
  "project_slug": "{{ cookiecutter.project_name | lower | replace(' ', '-') | replace('_', '-') }}",
  "project_short_description": "A robust Node.js microservice.",
  "author_name": "Xebia ACE",
  "author_email": "ace@xebia.com",
  "repository_name": "{{ cookiecutter.project_slug }}",
  "app_name": "app",
  "module_name": "{{ cookiecutter.app_name | lower | replace(' ', '_') | replace('-', '_') }}",
  "version": "0.1.0",
  "node_version": ["20", "18", "16"],           {# <--- This is the CRITICAL addition for Node.js #}
  "express_version": "^4.18.2",                 {# <--- Common for Node.js Express apps #}
  "license": ["MIT", "Apache-2.0", "GPL-3.0", "None"],

  "database": ["postgresql", "sqlite", "mysql", "none"], {# If Node.js uses these, keep them. Otherwise, remove. #}
  "use_mongoose": "y",                         {# <--- More common for Node.js with MongoDB #}
  "use_redis": "y",                            {# <--- Common for caching/sessions #}

  "authentication_method": ["jwt", "session_based", "none"],
  "include_swagger_ui": "y", {# Or rename to `include_api_docs_ui` or similar if it covers Swagger/OpenAPI for Node.js #}

  "logging_level": ["INFO", "DEBUG", "WARNING", "ERROR"],

  "use_docker": "y",
  "include_docker_compose": "y",
  "use_jest": "y",                             {# <--- Common Node.js testing framework #}
  "use_eslint": "y",                           {# <--- Common Node.js linter #}
  "use_prettier": "y",                         {# <--- Common Node.js formatter #}

  "include_github_actions": "y",
  "include_code_of_conduct": "n",
  "include_contributing": "y",
  "include_security_md": "y",

  "create_virtualenv_on_init": "n",            {# <--- Set to 'n' for Node.js projects #}
  "install_dependencies_on_init": "y",
  "run_pre_commit_on_init": "y"                {# <--- Pre-commit can be used for JS too (e.g., linting) #}
}
